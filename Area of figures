#include<stdio.h>
void main()
    {
        int e,f,g,h,i,j,k,l,m,n,o,r,s,t,u,v,w;
        
        printf("To check the area of the figure pls select '1' if it is a triangle \n '2' if it is a right angle triangle \n '3' if it is a trapezium \n '4' if it is a rhombus\n '5' if it is a parallelogram \n ");
        
        scanf("%d",&e);
        if(e==1)
            {
                printf("pls give the breadth and height of the triangle:\n");
                scanf("%d%d",&f,&g);
                h=(f*g)/2;
                printf("Area is : %d",h);
            }
        else if (e==2)
            {
                printf("pls enter the breadth and height of the triangle:\n");
                scanf("%d%d",&i,&j);
                k=(i*j)/2;
                printf("Area of the right angled triangle is : %d",k);
            }
        else if (e==3)    
            {
                printf("pls enter the lenght of base 1,base 2 and height:\n");
                scanf("%d%d%d",&l,&m,&n);
                o=((l+m)/2)*n;
                printf("Area of trapezium is : %d",o);
            }
        else if (e==4)
            {
                printf("Pls enter the length of diagonal 1 and diagonal 2 :\n");
                scanf("%d%d",&r,&s);
                t=(r*s)/2;
                printf("Area of rhombus : %d ",t);
            }
        else if (e==5)
            {
                printf("Pls enter length of side 1 and side 2:\n");
                scanf("%d%d",&u,&v);
                w=u*v;
                printf("Area of parallelogram : %d",w);
            }
        else
            {
                printf("Invalid");
            }
    }    
            
    
    

